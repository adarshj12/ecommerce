<%- include('../partials/admin/header');-%>
<section class="content-main">
    <form onsubmit="changeBanner(event)">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Banner</h2>
                    <input type="text" name="_id" id="_id" value="<%=banner._id%>" hidden>
                    <button type="submit" class="btn btn-md rounded font-sm hover-up ">Change</button>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Basic</h4>
                    </div>
                    <div class="card-body">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Banner title</label>
                                <input type="text" value="<%=banner.text%>"  id="banner_name" placeholder="Type here" class="form-control" id="product_name">
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label class="form-label">Product</label>
                                    <select id="product_banner" class="form-select">
                                        <% products.forEach(elem => { %>
                                            <option value="<%= elem._id %>"> <%= elem.name %> </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                    </div>
                </div>
              
            </div>
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Media</h4>
                    </div>
                    <div class="card-body">
                        <div class="input-upload">
                            <img src="<%=banner.photo.image_url%>" id="edit-<%=banner._id%>" alt="">
                            <input class="form-control" onchange="editImag(event,'<%=banner._id%>')" 
                            name="ban_image" type="file">
                        </div>
                    </div>
                </div> <!-- card end// -->
            </div>
        </div>
    </form>
</section> <!-- content-main end// -->
<%- include('../partials/admin/footer');-%>