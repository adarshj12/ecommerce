<%- include('../partials/user/header');-%>
    <section>
        <div class="login-register-area pb-100 ">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-12 offset-lg-2">
                        <div class="login-register-wrapper">
                            <div class="login-register-tab-list nav">
                                <a class="active" data-bs-toggle="tab" href="#lg1">
                                    <h4>OTP Login </h4>
                                </a>
                            </div>
                            <div class="tab-content">
                                <div id="lg1" class="tab-pane active">
                                    <div class="login-form-container">
                                        <div class="login-register-form">
                                            <span id="mobilereq_error" style="color: red;"></span>
                                            <div class="cart-shiping-update-wrapper">
                                                <input type="number" name="mobile" placeholder="Enter Mobile Number">
                                                <button id="request-otp-btn" class="btn btn-success"
                                                    onclick="requestOTP(document.querySelector('input[name=\'mobile\']').value)">REQUEST
                                                    OTP</button>
                                            </div>
                                            <span id="invalid_error" style="color: red;"></span>
                                            <div class="cart-shiping-update-wrapper">
                                                <input id="otp_input" style="display: none;" type="number" name="otp" placeholder="Enter OTP">
                                                <button id="send_otp" style="display: none;" class="btn btn-success"
                                                onclick="verifyOTP(document.querySelector('input[name=\'mobile\']').value,document.querySelector('input[name=\'otp\']').value)"
                                                >SEND</button>
                                            </div>
                                            <div class="login-toggle-btn"
                                                style="display: flex; justify-content: space-between; align-items: center;">
                                                <a href="/login" style="margin-right: 1rem;">Login With Password</a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/user/footer');-%>