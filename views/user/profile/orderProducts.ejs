<%- include('../../partials/user/header');-%>
    <section>
        <div class="card">
            <div class="card-body">
                <div class="row gx-5">
                    <aside class="col-lg-3 border-end">
                        <nav class="nav nav-pills flex-lg-column mb-4">
                            <a class="nav-link" aria-current="" href="account">Dashboard</a>
                            <a class="nav-link active" href="orders">My Orders</a>
                            <a class="nav-link" href="address">Address</a>
                        </nav>
                    </aside>
                    <div class="col-lg-9">
                        <section>
                            <div class="cart-main-area">
                                <div class="container">
                                    <h3 class="cart-page-title">Products</h3>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div
                                                class="address-and-invoice d-flex justify-content-between align-items-center">
                                                <div class="address-text">
                                                  <h6>Shipped To-</h6>  <em><h6><%=products[0].deliveryAddress%></h6></em>
                                                </div>
                                                <div class="invoice-button">
                                                    <div>
                                                        <a onclick="invoice('<%= JSON.stringify(products) %>')"> <i class="fa fa-download"></i></a>
                                                    </div>
                                                    <div>
                                                        invoice
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="table-content table-responsive cart-table-content">
                                                <table class="table">
                                                    <thead style="background-color: black;color: bisque;"
                                                        class="thead-dark">
                                                        <tr>
                                                            <th scope="col"><em></em></th>
                                                            <th scope="col"><em>Item</em></th>
                                                            <th scope="col"><em>Price</em> </th>
                                                            <th scope="col"><em>Quantity</em> </th>
                                                            <th scope="col"><em>Status</em> </th>
                                                            <th scope="col"><em>Action</em> </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% products.forEach(elem=> { %>
                                                            <tr>
                                                                <th>
                                                                    <a href="/product?id=<%= elem.products.item %>">
                                                                        <img style="height: 200px;width: 200px;"
                                                                            src="<%= elem.result.photos[0].image_url %>"
                                                                            alt="<%= elem.result.name %>">
                                                                    </a>
                                                                </th>
                                                                <td style="width: 220px;font-size: large;">
                                                                    <a href="/product?id=<%= elem.products.item %>">
                                                                        <%= elem.result.name %>
                                                                    </a>
                                                                </td>
                                                                <td>
                                                                    <%= elem.result.price %>
                                                                </td>
                                                                <td>
                                                                    <%= elem.products.quantity %>
                                                                </td>
                                                                <td>
                                                                    <%= elem.products.status %>
                                                                </td>
                                                                <%if(elem.products.status==='delivered'){%>
                                                                <td><button onclick="changeOrderProdStatus('<%= elem.products._id %>','<%= elem._id %>','return')" style="width: 150px;" class="btn btn-warning">Return</button></td>
                                                                <%}if(elem.products.status==='canceled'){%>
                                                                    <td>canceled</td>
                                                                    <%}if(elem.products.status==='placed'||elem.products.status==='shipped'){%>
                                                                        <td><button onclick="changeOrderProdStatus('<%= elem.products._id %>','<%= elem._id %>','canceled')" style="width: 150px;" class="btn btn-danger">Cancel</button></td>
                                                                        <%}%>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>


                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/user/footer');-%>