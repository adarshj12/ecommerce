<%- include('../../partials/user/header');-%>
    <section>
        <div class="card">
            <div class="card-body">
                <div class="row gx-5">
                    <aside class="col-lg-3 border-end">
                        <nav class="nav nav-pills flex-lg-column mb-4">
                            <a class="nav-link" aria-current="" href="account">Dashboard</a>
                            <a class="nav-link active" href="orders">My Orders</a>
                            <a class="nav-link" href="address">Address</a>
                        </nav>
                    </aside>
                    <div class="col-lg-9">
                        <section>
                            <!-- Cart Area Start -->
                            <div class="cart-main-area ">
                                <div class="container">
                                    <h3 class="cart-page-title">My Orders</h3>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                            <form action="#">
                                                <div class="table-content table-responsive cart-table-content">
                                                    <table class="table">
                                                        <thead style="background-color: black;color: bisque;" class="thead-dark">
                                                         
                                                          <tr>
                                                            <th scope="col"><em>DATE</em></th>
                                                            <th scope="col"><em>Total</em> </th>
                                                            <th scope="col"><em>Payment Method</em> </th>
                                                            <th scope="col"><em>Details</em> </th>
                                                          </tr>
                                                         
                                                        </thead>
                                                        <tbody>
                                                            <%orders.forEach(elem=>{%>
                                                          <tr>
                                                            <th><%=new Date(elem.orderDate).toDateString().slice(4,15)%></th>
                                                            <td>â‚¹<%=elem.totalAmount%></td>
                                                            <td><%=elem.paymentMode%></td>
                                                            <td><a href="/orderproducts?id=<%=elem._id%>">view</a></td>
                                                          </tr>
                                                          <%})%>
                                                        </tbody>
                                                      </table>

                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Cart Area End -->
                        </section>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card body end// -->
        </div>
    </section>
    <%- include('../../partials/user/footer');-%>