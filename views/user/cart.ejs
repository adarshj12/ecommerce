<%- include('../partials/user/header');-%>
    <section>
        <div class="cart-area pb-100">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <input type="hidden" id="cartId" value="<%= cart._id %>">
                        <div class="cart-table-content">
                            <div class="table-content table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="width-thumbnail">Image</th>
                                            <th class="width-name">Product</th>
                                            <th class="width-price"> Price</th>
                                            <th class="width-quantity">Quantity</th>
                                            <th class="width-subtotal">Subtotal</th>
                                            <th class="width-remove">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% cart.forEach((cartItem)=> { %>
                                            <tr>
                                                <td class="product-thumbnail">
                                                    <a href="/product?id=<%= cartItem.product._id %>"><img
                                                            src="<%= cartItem.product.photos[0].image_url %>"
                                                            alt=""></a>
                                                </td>
                                                <td class="product-name">
                                                    <h5><a href="/product?id=<%= cartItem.product._id %>">
                                                            <%= cartItem.product.name %>
                                                        </a></h5>
                                                </td>
                                                <td class="product-cart-price"><span class="amount">₹<%=
                                                            cartItem.product.price %></span></td>
                                                <td class="cart-quality">
                                                    <div>


                                                        <span>
                                                            <i class="ti-minus" id="decr-<%=cartItem.product._id%>"
                                                                onclick="changeQuantity('<%=cartItem.product._id%>','<%=cartItem._id%>','<%= cartItem.product.price %>',-1)"></i>
                                                            <h6 id="quantity-<%= cartItem.product._id %>"
                                                                style="display: inline-block;">
                                                                <%= cartItem.quantity %>
                                                            </h6>
                                                            <i class="ti-plus"
                                                                onclick="changeQuantity('<%=cartItem.product._id%>','<%=cartItem._id%>','<%= cartItem.product.price %>',1)"></i>
                                                        </span>
                                                    </div>
                                                    <div>
                                                        <h6 id="stockmessage"></h6>
                                                    </div>

                                                </td>


                                                <td id="subtotal-<%= cartItem.product._id %>" class="product-total"
                                                    data-subtotal="<%= cartItem.quantity * cartItem.product.price %>">
                                                    <span>₹<%= cartItem.quantity * cartItem.product.price %></span>
                                                </td>
                                                <td class="product-remove"><a
                                                        onclick="removeProd('<%=cartItem.product._id%>')"><i
                                                            class="ti-trash"></i></a></td>
                                            </tr>
                                            <% }) %>
                                                <tr>
                                                    <td class="product-thumbnail">

                                                    </td>
                                                    <td class="product-name">
                                                        <h5 style="font-size: x-large;color: black;">Total</h5>
                                                    </td>
                                                    <td></td>
                                                    <td></td>
                                                    <td style="font-size: larger;font-weight: bold;"
                                                        class="product-total" id="total-amount"><span>₹<%=total%></span>
                                                    </td>
                                                    <td></td>
                                                </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="cart-shiping-update-wrapper">
                                    <div class="cart-shiping-update btn-hover">
                                        <a href="/">Continue Shopping</a>
                                    </div>
                                    <div class="cart-clear-wrap">

                                        <div class="cart-clear btn-hover">
                                            <a href="/empty?id=<%=cart[0]._id%>">Clear Cart</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-12 col-12">
                        <div class="grand-total-wrap">
                            <div class="grand-total-btn btn-hover">
                                <a class="btn theme-color" href="/checkout">Proceed to checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('../partials/user/footer');-%>